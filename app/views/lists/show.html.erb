<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dzldggijz/image/upload/v1651853357/development/<%=@list.photo.key%>.jpg);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
<br>

<nav class="navbar navbar-light">
  <div class="container-fluid">
    <h1>Add movies to this list</h1>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</nav>

<div class="cards">
  <% @bookmarks.each do |movie| %>
  <div class="card-trip">
    <img src="<%= Movie.find(movie.movie_id).poster_url %>" />
    <div class="card-trip-infos">
      <div>
        <h2><%= Movie.find(movie.movie_id).title %></h2>
        <p><%= Movie.find(movie.movie_id).overview %></p>
      </div>
      <h2 class="card-trip-pricing text-danger"><%= link_to "Delete",
                  bookmark_path(movie),
                  method: :delete,
                  class: 'text-danger',
                  data: { confirm: "Are you sure?" } %></h2>
    </div>
  </div>
  <% end %>
</div>
<br><br>
